{
	"$schema": "https://biomejs.dev/schemas/2.2.5/schema.json",
	"formatter": {
		"indentWidth": 2
	},
	"linter": {
		"enabled": true,
		"rules": {
			"suspicious": {
				"noDoubleEquals": "off",
				"noCatchAssign": "off"
			},
			"style": {
				"useTemplate": "off",
				"useSingleVarDeclarator": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"semicolons": "asNeeded"
		}
	}
}
